{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": ["react"],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
      "no-console": "off",
      "no-debugger": "error",
  
      "eqeqeq": ["error", "always"],
      "curly": ["error", "all"],
  
      "react/prop-types": "off",
      "react/react-in-jsx-scope": "off",
  
      "react/jsx-uses-react": "off",
      "react/jsx-uses-vars": "error",

      "react-hooks/set-state-in-effect": "off"

      
    }
  }
  